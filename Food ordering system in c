#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct MenuItem {
    char food[20];
    int price;
} MenuItem;

void printMenu(MenuItem menu[], int size) {
int i;
    printf("MENU:\n");
    printf("ITEMS\t\tPRICE\n");

    for ( i = 0; i < size; i++) {
        printf("%s\t\t%d\n", menu[i].food, menu[i].price);
    }
}

void bubbleSort(MenuItem menu[], int size) {
  int i,j;
  for  (i = 0; i < size - 1; i++) {
        for ( j = 0; j < size - i - 1; j++) {
            if (strcmp(menu[j].food, menu[j + 1].food) > 0) {
                // Swap elements if they are in the wrong order
                MenuItem temp = menu[j];
                menu[j] = menu[j + 1];
                menu[j + 1] = temp;
            }
        }
    }
}

int binarySearch(MenuItem menu[], int size, const char *foodName) {
    int left = 0,cmp,mid;
    int right = size - 1;

    while (left <= right) {
         mid = left + (right - left) / 2;
        cmp = strcmp(menu[mid].food, foodName);

        if (cmp == 0)
            return mid;  // Found the food item

        if (cmp < 0)
            left = mid + 1;  // Search in the right half
        else
            right = mid - 1;  // Search in the left half
    }

    return -1;  // Food item not found
}

int main() {
    // Welcome screen
    printf("Welcome to our Food Ordering System!\n");
    printf("Press Enter to view the menu...\n");
    getchar();  // Wait for Enter key

    MenuItem menu[] = {
        {"Burger", 300},
        {"Pizza", 500},
        {"Hotdog", 250},
        {"Salad", 200},
        {"Sushi", 700},
        {"Steak", 800},
        {"Pasta", 400},
        {"Sandwich", 350},
        {"Soup", 150},
        {"Fries", 100}
    };

    int menuSize = sizeof(menu) / sizeof(menu[0]);
    char choice;
    int totalAmount = 0;
    char foodChoice[20];
    int quantity, index;
 int transactionChoice;
    clrscr();

    // Sort the menu based on food names
    bubbleSort(menu, menuSize);

    do {
        printf("\nMenu:\n");
        printMenu(menu, menuSize);

        printf("\nEnter the food item you want to order: ");
        scanf("%s", foodChoice);

        index = binarySearch(menu, menuSize, foodChoice);
        if (index != -1) {
            printf("Enter the quantity: ");
            scanf("%d", &quantity);

            totalAmount += (menu[index].price * quantity);
            printf("Added to your order.\n");
        } else {
            printf("Food item not found.\n");
        }

        printf("Do you want to order more? (y/n): ");
        scanf(" %c", &choice);

    } while (choice == 'y' || choice == 'Y');

    // Transaction options
    printf("\nTransaction Options:\n");
    printf("1. Card\n");
    printf("2. Online\n");
    printf("3. Cash\n");
    printf("Select a transaction option: ");

   
    scanf("%d", &transactionChoice);

    switch (transactionChoice) {
        case 1:
            printf("You chose Card. Payment successful!\n");
            break;
        case 2:
            printf("You chose Online. Payment successful!\n");
            break;
        case 3:
            printf("You chose Cash. Please pay at the counter.\n");
            break;
        default:
            printf("Invalid option. Transaction cancelled.\n");
    }

    printf("Your total amount is: %d\n", totalAmount);
    getch();
    return 0;
}
